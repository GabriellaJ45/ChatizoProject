<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gabriella.chatizoproject.MessagesScreen">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/composeMessage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:clickable="true"
            app:backgroundTint="?android:attr/textColorSearchUrl"
            app:fabSize="mini"
            app:srcCompat="@drawable/pencil"
            tools:layout_editor_absoluteX="322dp"
            tools:layout_editor_absoluteY="1dp" />

        <TextView
            android:id="@+id/composeText"
            android:layout_width="304dp"
            android:layout_height="495dp"
            android:text="Press to compose"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>
